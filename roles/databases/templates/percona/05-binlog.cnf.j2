[mysqld]
log-bin = mysql-bin
expire-logs-days = 7
max-binlog-size = 16M
binlog-format = "MIXED"

# GTID replication config
log-slave-updates = On
gtid-mode = On
enforce-gtid-consistency = On

# Эта часть только для слэйва - исключаем репликацию таблиц
{% if ansible_hostname == 'replica' %}{% else %}#{% endif %}replicate-ignore-table=bet.events_on_demand
{% if ansible_hostname == 'replica' %}{% else %}#{% endif %}replicate-ignore-table=bet.v_same_event